{
  "env": {
    "browser": true,
    "es2021": true
  },
  "ignorePatterns": ["dist/", "node_modules/"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-var": "error",
    "no-unused-vars": "off",
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
    "max-len": [
      "error",
      {
        "code": 120,
        "ignoreComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreRegExpLiterals": true
      }
    ],
    "no-undef": 0,
    "prettier/prettier": ["error", { "endOfLine": "auto" }]
  }
}
